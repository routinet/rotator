<?xml version="1.0" encoding="UTF-8"?>

<extension type="component" version="3.0.0" method="upgrade">
  <name>COM_ROTATOR</name>
  <creationDate>Nov 2017</creationDate>
  <author>Steve Binkowski</author>
  <copyright>Copyright Steve Binkowski 2017</copyright>
  <version>1.0.0</version>
  <description>COM_ROTATOR_DESCRIPTION</description>

  <install>
    <sql>
      <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
    </sql>
  </install>

  <uninstall>
    <sql>
      <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    </sql>
  </uninstall>

<!--
  <update>
    <schemas>
      <schemapath type="mysql">sql/updates</schemapath>
    </schemas>
  </update>
-->

  <files folder="site">
    <filename>controller.php</filename>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <filename>router.php</filename>
    <filename>rquote.php</filename>
    <folder>language</folder>
    <folder>models</folder>
    <folder>views</folder>
  </files>

  <!--
  <media destination="com_rotator" folder="media">
    <filename>index.html</filename>
    <folder>css</folder>
  </media>
  -->

  <administration>

    <menu link="index.php?option=com_rotator">COM_ROTATOR_SUBMENU_BLOCKS</menu>

    <submenu>
      <menu view="blocks">COM_ROTATOR_MANAGE_BLOCKS</menu>
      <menu link="option=com_categories&amp;view=categories&amp;extension=com_rotator">COM_RQUOTE_SUBMENU_CATEGORIES</menu>
    </submenu>

    <files folder="admin">
      <filename>access.xml</filename>
      <filename>index.html</filename>
      <filename>config.xml</filename>
      <filename>rotator.php</filename>
      <filename>controller.php</filename>
      <folder>controllers</folder>
      <folder>helpers</folder>
      <folder>models</folder>
      <folder>sql</folder>
      <folder>tables</folder>
      <folder>views</folder>
    </files>

    <languages folder="admin">
      <language tag="en-GB">language/en-GB/en-GB.com_rotator.ini</language>
      <language tag="en-GB">language/en-GB/en-GB.com_rotator.sys.ini</language>
    </languages>

  </administration>
</extension>