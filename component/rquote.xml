<?xml version="1.0" encoding="UTF-8"?>

<extension type="component" version="3.0.0" method="upgrade">
  <name>COM_RQUOTE</name>
  <creationDate>Mar 2015</creationDate>
  <author>Kevin Burke</author>
  <authorEmail>kdburke@gmail.com</authorEmail>
  <authorUrl>http://www.mytidbits.us</authorUrl>
  <copyright>Copyright Kevin Burke 2016</copyright>
  <license>This component is licensed under GPL v2.0</license>
  <version>3.2.0</version>
  <description>COM_RQUOTE_DESCRIPTION</description>
  <scriptfile>script.php</scriptfile>
  <install>
    <sql>
      <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
    </sql>
  </install>
  <uninstall>
    <sql>
      <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    </sql>
  </uninstall>
  <update>
    <schemas>
      <schemapath type="mysql">sql/updates</schemapath>
    </schemas>
  </update>
  <files folder="site">
    <filename>controller.php</filename>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <filename>router.php</filename>
    <filename>rquote.php</filename>
    <folder>language</folder>
    <folder>models</folder>
    <folder>views</folder>
  </files>
  <media destination="com_rquote" folder="media">
    <filename>index.html</filename>
    <folder>css</folder>
  </media>
  <administration>
    <menu link="index.php?option=com_rquote">COM_RQUOTE_SUBMENU_MESSAGES</menu>
    <submenu>
      <menu view="rquotes">COM_RQUOTE_ADD_QUOTE</menu>
      <menu link="option=com_categories&amp;view=categories&amp;extension=com_rquote">COM_RQUOTE_SUBMENU_CATEGORIES</menu>
      <menu view="preview">COM_RQUOTE_SUBMENU_PREVIEW</menu>
    </submenu>
    <files folder="admin">
      <filename>access.xml</filename>
      <filename>index.html</filename>
      <filename>config.xml</filename>
      <filename>rquote.php</filename>
      <filename>controller.php</filename>
      <folder>controllers</folder>
      <folder>helpers</folder>
      <folder>help</folder>
      <folder>models</folder>
      <folder>sql</folder>
      <folder>tables</folder>
      <folder>views</folder>
    </files>
    <languages folder="admin">
      <language tag="en-GB">language/en-GB/en-GB.com_rquote.ini</language>
      <language tag="en-GB">language/en-GB/en-GB.com_rquote.sys.ini</language>
      <language tag="de-DE">language/de-DE/de-DE.com_rquote.ini</language>
      <language tag="de-DE">language/de-DE/de-DE.com_rquote.sys.ini</language>
    </languages>
  </administration>
  <updateservers>
    <server type="extension" priority="1" name="Rquote">http://mytidbits.us/updateserver/com_rquote-update.xml</server>
  </updateservers>
</extension>